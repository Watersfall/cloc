        <servlet-name>policies</servlet-name>
        <url-pattern>/policies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>news</servlet-name>
        <jsp-file>/WEB-INF/jsp/news.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>news</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>decisions</servlet-name>
        <jsp-file>/WEB-INF/jsp/decisions.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>decisions</servlet-name>
        <url-pattern>/decisions</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>map</servlet-name>
        <jsp-file>/WEB-INF/jsp/map.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>map</servlet-name>
        <url-pattern>/map</url-pattern>
    </servlet-mapping>
</web-app>